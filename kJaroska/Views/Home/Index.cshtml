@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    
    <button id="buttonOne">Get Git Users</button>
    
    <h1>Github Users</h1>
    <div id="user"></div>
</div>

<script>
    document.getElementById('buttonOne').addEventListener('click', loadUsers);

    function loadUsers() {
        var xhr = new XMLHttpRequest();
        xhr.open('GET', 'https://api.github.com/users', true);

        xhr.onload = function() {
            if (this.status == 200) {
                var users = JSON.parse(this.responseText);

                var output = '';

                for (var i in users) {
                    output +=
                        '<div class ="user">' +
                        '<img src="' + users[i].avatar_url + '" width="70" height="70"' +
                        '<ul>' +
                        '<li>ID: ' +users[i].id +
                        '</li>' +
                        '</ul>' +
                        '</div>';
                }

                document.getElementById('user').innerHTML = output;
            }
        }

        xhr.send();
    }

</script>b
